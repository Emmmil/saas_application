<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <div class="text-center">
        <% if params[:plan] == "1" %>
          <h2>Basic Account</h2>
          <p>Gain access to the the tools that this wbesite has to offer!</p>
        <% elsif params[:plan] == "2" %>
          <h2>Pro Account</h2>
          <p> Gain access to the the tools that this wbesite has 
          to offer along with extra perks for the low price of $10/month!</p>
        <% end %> 
      </div>
      
      <div class="well">
        <h2 class="text-center">Sign-up</h2>
        <% if params[:plan] == "1" %>
          <%= render "basic_form" %>
        <% elsif params[:plan] == "2" %>
          <%= render "pro_form" %>
        <% end %> 
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>