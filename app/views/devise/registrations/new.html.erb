<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
        
        <% if params[:plan] == "1" %>
          <h2 class="text-center">Basic Plan Sign-up</h2>
          <h4 class="text-center"> Sign up and gain access to the basic 
          plan which will allow you to be able to do the basic things!</h4>
          <div class="well">
            <%= render "basic_form"%>
          </div>
        <% else %>
          <h2 class="text-center">Pro Plan Sign-up</h2>
          <h4 class="text-center"> Sign up and gain access to the pro plan
          benefits which will allow you all the benefits of a basic plan along with extra benefits!</h4>
          <div class="well">
            <%= render "pro_form"%>
          </div>
        <% end %> 

    </div>
  </div>
</div>